<h1 class= "title">Results for gardens</h1>

<div class="flex">
  <div class="container">
    <div class="row">
      <% @gardens.each do |garden| %>
        <div class="col-xs-12 col-sm-6 col-md-4">
          <div class="card">
            <h3><%= garden.title %></h3>
            <p><%= garden.address %></p>
            <%= link_to "See more details", garden_path(garden) , class: "card-link" %>
          </div>
        </div>
      <% end %>
    </div>
  </div>

  <div
   id="map"
   style="width: 50%;
   height: 600px;"
   data-markers="<%= @markers.to_json %>"
   ></div>
</div>
     <!-- Gmaps js: building the map -->
<script>
  function initMap() {
    // Create a map object and specify the DOM element for display.
    var map = new google.maps.Map(document.getElementById('map'), {
      center: {lat: 52.5206, lng: 13.4098},
      scrollwheel: false,
      zoom: 8
    });
  }
</script>
<!-- jQuery (necessary for Bootstrap's JavaScript plugins) -->
<script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.4/jquery.min.js"></script>
<!-- Latest compiled and minified JavaScript -->
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
<!-- Gmaps JavaScript -->
<script async defer
  src="https://maps.googleapis.com/maps/api/js?key=AIzaSyCzER7O10ZOUp7FloJzMe2r8X1GIQhgt7Q&callback=initMap">
</script>

